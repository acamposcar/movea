<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs'); %>

  <body>
    <%- include('./partials/nav.ejs', {active: 'home' } ); %>

      <div class="container">
        <% if(error){ %>
          <h1>Error loading dynamic content</h1>
          <% } else if(listMovies.length==0){ %>
            <h1>Movies not found</h1>
            <% } else{ %>
              <h1>Trending Movies</h1>
              <a href="<%= listMovies[0].url %>" class="featured">

                <div class="featured-title">
                  <%= listMovies[0].title %>
                </div>
                <button class="featured-button">Watch Now</button>
              </a>

              <h1>Top Rated</h1>
              <div class="grid">
                <% listMovies.forEach(function(movie){ %>
                  <a href=<%=movie.url %> class="card" style="--bg-image:url(<%= movie.image %>)" >
                      <span class="card-play material-icons">
                        play_circle_filled
                      </span>
                      <div class="card-title">
                        <%= movie.title %>
                      </div>
                      <div class="card-year">
                        <%= movie.year %>
                      </div>

                  </a>
                  <% }) %>
                    <% } %>
              </div>




  </body>

</html>